<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorLightAccent</item>

        <item name="android:fontFamily">@font/museo_sans_300</item>
        <item name="android:textViewStyle">@style/textViewStyleAEE</item>

        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="textViewStyleAEE" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="titleBarStyle" parent="textViewStyleAEE">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="inputLabelStyle" parent="textViewStyleAEE">
        <item name="android:fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="paragraphStyle" parent="textViewStyleAEE">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="inputEditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_height">40dp</item>

    </style>
</resources>
