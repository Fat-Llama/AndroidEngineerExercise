<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <item name="android:spinnerItemStyle">@style/spinnerItemForm</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemForm</item>
        <item name="android:fontFamily">@font/museo_sans_300</item>
    </style>



    <!-- App consistency designs -->
    <style name="scrollView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="guideVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>



    <!-- Title bar fragment -->
    <style name="fragmentTitleBar">
        <item name="android:name">uk.co.connorglennon.androidengineerexercise.TitleBarFragment</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tvTitle">
        <item name="android:fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">18sp</item>
    </style>



    <!-- Footer button -->
    <style name="btnNext" parent="android:Widget.Button">
        <item name="android:background">@drawable/gradient_button_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:onClick">handleOnClick</item>
    </style>

    <!-- Welcome screen styles-->
    <style name="tvWelcomeScreenListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="imgTick">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>



    <!-- Form styles -->
    <style name="tvForm">
        <item name="android:fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tvFormInfo" parent="tvForm">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/museo_sans_300</item>
    </style>

    <style name="inputBoxes">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="etForm" parent="inputBoxes">
    </style>


    <style name="spinnerForm" parent="inputBoxes">
    </style>

    <style name="spinnerItemForm" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColorTertiary">@color/colorPrimaryDark</item>
    </style>

    <style name="spinnerDropDownItemForm" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColorTertiary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="rgForm" parent="inputBoxes">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="rbForm">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>

    <style name="tvRadioGroupForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>



    <!-- Calendar picker style -->
    <style name="betterPickerCalendar" parent="BetterPickersRadialTimePickerDialog.PrimaryColor">
        <item name="bpPreHeaderBackgroundColor">@color/colorPrimaryDark</item>
        <item name="bpHeaderBackgroundColor">@color/colorPrimary</item>
        <item name="bpHeaderSelectedTextColor">@color/colorAccent</item>
        <item name="bpHeaderUnselectedTextColor">@color/colorPrimaryDark</item>

        <item name="bpBodyBackgroundColor">@color/colorPrimaryDark</item>
        <item name="bpBodySelectedTextColor">@android:color/white</item>
        <item name="bpBodyUnselectedTextColor">@android:color/white</item>

        <item name="bpRadialBackgroundColor">@color/colorPrimaryDark</item>
        <item name="bpRadialTextColor">@color/colorAccent</item>
        <item name="bpRadialPointerColor">@color/colorAccent</item>

        <item name="bpButtonsBackgroundColor">@color/colorPrimaryDark</item>
        <item name="bpButtonsTextColor">@color/colorAccent</item>
    </style>

    <!-- Recycler View style -->
    <style name="rvTextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
