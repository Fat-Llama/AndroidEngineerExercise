<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputName"
        style="@style/editTextStyleAEE"
        android:layout_width="0dp"
        android:ems="10"
        android:hint="@string/hintName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/guideProfilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputUserName"
        style="@style/editTextStyleAEE"
        android:layout_width="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/hintUsername"
        app:layout_constraintEnd_toStartOf="@+id/guideProfilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputName" />

    <ImageView
        android:id="@+id/imgProfilePicture"
        android:contentDescription="@string/descProfilePicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideProfilePicture"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.constraint.Guideline
        android:id="@+id/guideProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <Button
        android:id="@+id/btnChangePhoto"
        style="@style/buttonAEE"
        android:layout_width="0dp"
        android:text="@string/lblChangeProfilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUserName" />

    <ImageButton
        android:id="@+id/btnDatePicker"
        android:contentDescription="@string/descDatePicker"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputDate"
        app:layout_constraintEnd_toStartOf="@+id/inputDate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputDate"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <EditText
        android:id="@+id/inputDate"
        style="@style/editTextStyleAEE"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/hintDOB"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@id/guideProfilePicture"        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnDatePicker"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePhoto" />

    <EditText
        android:id="@+id/inputAge"
        style="@style/editTextStyleAEE"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/hintAge"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePhoto" />

    <Spinner
        android:id="@+id/spinnerCountryPicker"

        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDate" />

    <TextView
        android:id="@+id/lblGender"
        style="@style/textViewStyleAEE"
        android:layout_width="wrap_content"
        android:layout_margin="0dp"
        android:text="Gender:"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCountryPicker"
        app:layout_constraintRight_toLeftOf="@+id/radioGroupGenderSelector"/>

    <RadioGroup
        android:id="@+id/radioGroupGenderSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCountryPicker"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="Male"/>

        <RadioButton
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="Female"/>

        <RadioButton
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="Prefer not to say"/>

        <RadioButton
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/inputAddress"
        style="@style/editTextStyleAEE"
        android:layout_width="0dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupGenderSelector" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonAEE"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>